{
  "name": "openfrontio",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "game",
    "state-service",
    "discord-bot"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "npm run dev --workspace=game",
    "build": "docker-compose build",
    "build:game": "npm run build --workspace=game",
    "build:state": "npm run build --workspace=crud",
    "build:discord": "npm run build --workspace=discord-bot",
    "test": "npm run test --workspaces",
    "clean": "rm -rf **/node_modules **/build **/dist **/out"
  },
  "devDependencies": {
    "prettier": "^3.5.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
