{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "resources/**/*",
    "generated/**/*",
    "test/core/GameImpl.test.ts",
    "src/scripts"
  ],
  "exclude": [
    "node_modules"
  ]
}